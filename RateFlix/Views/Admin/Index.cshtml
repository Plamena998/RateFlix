@model RateFlix.Core.ViewModels.Admin.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Statistics Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">

    <!-- Total Users Card -->
    <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-30 rounded-lg flex items-center justify-center">
                <i class="fas fa-users text-2xl text-white"></i>
            </div>
            <span class="text-white text-sm font-semibold">+@Model.NewUsersThisMonth this month</span>
        </div>
        <h3 class="text-3xl font-bold text-white mb-1">@Model.TotalUsers</h3>
        <p class="text-blue-100">Total Users</p>
    </div>

    <!-- Total Content Card -->
    <div class="bg-gradient-to-br from-red-500 to-red-600 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-30 rounded-lg flex items-center justify-center">
                <i class="fas fa-film text-2xl text-white"></i>
            </div>
            <span class="text-white text-sm font-semibold">Movies & Series</span>
        </div>
        <h3 class="text-3xl font-bold text-white mb-1">@(Model.TotalMovies + Model.TotalSeries)</h3>
        <p class="text-red-100">@Model.TotalMovies Movies, @Model.TotalSeries Series</p>
    </div>

    <!-- Total Reviews Card -->
    <div class="bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-30 rounded-lg flex items-center justify-center">
                <i class="fas fa-star text-2xl text-white"></i>
            </div>
            <span class="text-white text-sm font-semibold">+@Model.ReviewsThisMonth this month</span>
        </div>
        <h3 class="text-3xl font-bold text-white mb-1">@Model.TotalReviews</h3>
        <p class="text-yellow-100">Total Reviews</p>
    </div>

    <!-- Active Users Card -->
    <div class="bg-gradient-to-br from-green-500 to-green-600 rounded-xl p-6 shadow-lg">
        <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-30 rounded-lg flex items-center justify-center">
                <i class="fas fa-user-check text-2xl text-white"></i>
            </div>
            <span class="text-white text-sm font-semibold">Last 30 days</span>
        </div>
        <h3 class="text-3xl font-bold text-white mb-1">@Model.ActiveUsers</h3>
        <p class="text-green-100">Active Users</p>
    </div>

</div>

<!-- Quick Actions -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <a href="AdminMovies/Create" class="bg-gray-800 hover:bg-gray-700 rounded-xl p-6 transition transform hover:scale-105 shadow-lg border border-gray-700">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-red-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-plus text-2xl text-white"></i>
            </div>
            <div>
                <h3 class="text-xl font-bold text-white">Add Movie</h3>
                <p class="text-gray-400">Create new movie entry</p>
            </div>
        </div>
    </a>

    <a href="/AdminSeries/Create" class="bg-gray-800 hover:bg-gray-700 rounded-xl p-6 transition transform hover:scale-105 shadow-lg border border-gray-700">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-blue-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-plus text-2xl text-white"></i>
            </div>
            <div>
                <h3 class="text-xl font-bold text-white">Add Series</h3>
                <p class="text-gray-400">Create new series entry</p>
            </div>
        </div>
    </a>

    <a href="/AdminReviews/Index" class="bg-gray-800 hover:bg-gray-700 rounded-xl p-6 transition transform hover:scale-105 shadow-lg border border-gray-700">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 bg-yellow-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-flag text-2xl text-white"></i>
            </div>
            <div>
                <h3 class="text-xl font-bold text-white">Moderate Reviews</h3>
                <p class="text-gray-400">Manage user reviews</p>
            </div>
        </div>
    </a>
</div>

<!-- Recent Activity -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">

    <!-- Recent Reviews -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-white flex items-center gap-2">
                <i class="fas fa-comments text-yellow-400"></i>
                Recent Reviews
            </h3>
            <a href="/Admin/Reviews" class="text-red-400 hover:text-red-300 text-sm">View All →</a>
        </div>

        @if (Model.RecentReviews.Any())
        {
            <div class="space-y-3">
                @foreach (var review in Model.RecentReviews)
                {
                    <div class="bg-gray-700 rounded-lg p-4">
                        <div class="flex items-start justify-between mb-2">
                            <div class="flex items-center gap-2">
                                <div class="w-8 h-8 bg-red-500 rounded-full flex items-center justify-center text-sm font-bold">
                                    @review.UserName.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <p class="text-white font-semibold">@review.UserName</p>
                                    <p class="text-gray-400 text-xs">@review.CreatedAt.ToString("MMM dd, yyyy")</p>
                                </div>
                            </div>
                            <div class="bg-yellow-500 text-black px-2 py-1 rounded-full text-sm font-bold">
                                @review.Rating/10
                            </div>
                        </div>
                        <p class="text-white font-semibold text-sm mb-1">@review.ContentTitle</p>
                        <p class="text-gray-400 text-sm line-clamp-2">@review.Comment</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-400 text-center py-8">No recent reviews</p>
        }
    </div>

    <!-- Recent Users -->
    <div class="bg-gray-800 rounded-xl p-6 shadow-lg border border-gray-700">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold text-white flex items-center gap-2">
                <i class="fas fa-user-plus text-green-400"></i>
                New Users
            </h3>
            <a href="/Admin/Users" class="text-red-400 hover:text-red-300 text-sm">View All →</a>
        </div>

        @if (Model.RecentUsers.Any())
        {
            <div class="space-y-3">
                @foreach (var user in Model.RecentUsers)
                {
                    <div class="bg-gray-700 rounded-lg p-4 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-lg font-bold">
                                @user.UserName.Substring(0, 1).ToUpper()
                            </div>
                            <div>
                                <p class="text-white font-semibold">@user.UserName</p>
                                <p class="text-gray-400 text-sm">@user.Email</p>
                            </div>
                        </div>
                        <p class="text-gray-400 text-xs">@user.CreatedAt.ToString("MMM dd")</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-gray-400 text-center py-8">No new users</p>
        }
    </div>

</div>
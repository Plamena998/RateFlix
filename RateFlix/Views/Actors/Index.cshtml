@model RateFlix.Core.ViewModels.ActorsPageViewModel
@{
    ViewData["Title"] = "Actors";
}

<div class="p-10">

    <!-- Birthday Actors Section -->
    @if (Model.BirthdayActors.Any())
    {
        <div class="mb-10">
            @await Html.PartialAsync("_BirthdaySection", Model.BirthdayActors)
        </div>
    }

    <!-- All Actors Header -->
    <h2 class="text-3xl font-bold mt-10 mb-6 text-white">All Actors</h2>

    <!-- Actors Grid -->
    <div id="actorsGrid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6 mb-8">
        @foreach (var actor in Model.AllActors)
        {
            @await Html.PartialAsync("_ActorCard", actor)
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="flex justify-center items-center space-x-2 mt-8">
            @if (Model.CurrentPage > 1)
            {
                <a href="?page=@(Model.CurrentPage - 1)"
                   class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition">
                    <i class="fas fa-chevron-left"></i>
                </a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <a href="?page=@i"
                   class="px-4 py-2 rounded-lg transition @(i == Model.CurrentPage ? "bg-red-500 text-white" : "bg-gray-800 text-white hover:bg-gray-700")">
                    @i
                </a>
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="?page=@(Model.CurrentPage + 1)"
                   class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition">
                    <i class="fas fa-chevron-right"></i>
                </a>
            }
        </div>

        <div class="text-center text-gray-400 mt-4">
            Page @Model.CurrentPage of @Model.TotalPages
        </div>
    }

    <!-- Modal Container -->
    <div id="actorModalContainer"></div>

</div>
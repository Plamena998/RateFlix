@model RateFlix.Models.ViewModels.ActorCardViewModel

<div class="bg-gray-800/20 rounded-2xl p-4 shadow-2xl transform scale-105 hover:scale-110 transition-all duration-500
            flex flex-col justify-between items-center w-40 h-64 cursor-pointer"
     onclick="loadActorModal(@Model.Id)">

    <!-- Actor Photo -->
    <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-white shadow-lg">
        <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-full object-cover" />
    </div>

    <!-- Name -->
    <div class="flex flex-col items-center mt-2 text-center space-y-1">
        <p class="text-xl font-bold text-white">@Model.Name</p>
    </div>

    <!-- Age-->
    <p class="text-sm text-yellow-400 font-semibold mt-2">
        Age: @Model.Age
    </p>
</div>

@model List<RateFlix.Core.ViewModels.ActorCardViewModel>

<div class="bg-gradient-to-br from-red-600 via-red-500 to-yellow-500 rounded-2xl p-6
            shadow-2xl flex flex-wrap justify-center gap-6 transition-all duration-500">
    <h3 class="w-full text-3xl font-bold mb-6 text-center text-white drop-shadow-lg">
        🎉 Today's Birthdays
    </h3>

    @foreach (var actor in Model)
    {
        <div onclick="loadActorModal(@actor.Id)" class="bg-gray-800/20 rounded-2xl p-4 shadow-2xl transform scale-105 hover:scale-110 transition-all duration-500
                flex flex-col justify-between items-center w-40 h-64">
            <!-- Actor Photo -->
            <div class="w-24 h-24 rounded-full overflow-hidden border-4 border-white shadow-lg">
                <img src="@actor.ImageUrl" alt="@actor.Name" class="w-full h-full object-cover" />
            </div>

            <!-- Name + Top Contents -->
            <div class="flex flex-col items-center mt-2 text-center space-y-1">
                <p class="text-xl font-bold text-white">@actor.Name</p>
            </div>

            <!-- Age -->
            <p class="text-sm text-yellow-400 font-semibold mt-2">
                Age: @actor.Age
            </p>
        </div>

    }
</div>

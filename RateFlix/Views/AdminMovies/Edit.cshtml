@model RateFlix.Core.ViewModels.Admin.AdminMovieFormViewModel
@{
    var isEdit = Model.Id != 0;
    ViewData["Title"] = isEdit ? "Edit Movie" : "Add New Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Scripts {
    <script src="~/js/favorites.js"></script>

}
<div class="max-w-4xl mx-auto">

    <!-- Header -->
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-white mb-2">@ViewData["Title"]</h1>
        <a asp-controller="AdminMovies" asp-action="Index" class="text-red-400 hover:text-red-300">
            <i class="fas fa-arrow-left mr-2"></i>Back to Movies
        </a>
    </div>

    <!-- Form -->
    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="bg-gray-800 rounded-lg p-6">
        @Html.AntiForgeryToken()
        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <!-- Basic Information -->
        <div class="mb-6">
            <h3 class="text-xl font-bold text-white mb-4">Basic Information</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

                <!-- Title -->
                <div class="md:col-span-2">
                    <label asp-for="Title" class="block text-sm font-medium text-gray-300 mb-2">Title *</label>
                    <input asp-for="Title" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                </div>

                <!-- Description -->
                <div class="md:col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-300 mb-2">Description *</label>
                    <textarea asp-for="Description" rows="4" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <!-- Release Year -->
                <div>
                    <label asp-for="ReleaseYear" class="block text-sm font-medium text-gray-300 mb-2">Release Year *</label>
                    <input asp-for="ReleaseYear" type="number" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="ReleaseYear" class="text-red-500 text-sm"></span>
                </div>

                <!-- Duration -->
                <div>
                    <label asp-for="Duration" class="block text-sm font-medium text-gray-300 mb-2">Duration (minutes) *</label>
                    <input asp-for="Duration" type="number" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="Duration" class="text-red-500 text-sm"></span>
                </div>

                <!-- IMDB Score -->
                <div>
                    <label asp-for="IMDBScore" class="block text-sm font-medium text-gray-300 mb-2">IMDB Score (0-10) *</label>
                    <input asp-for="IMDBScore" type="number" step="0.1" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="IMDBScore" class="text-red-500 text-sm"></span>
                </div>

                <!-- MetaScore -->
                <div>
                    <label asp-for="MetaScore" class="block text-sm font-medium text-gray-300 mb-2">MetaScore (0-100)</label>
                    <input asp-for="MetaScore" type="number" step="0.1" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" />
                    <span asp-validation-for="MetaScore" class="text-red-500 text-sm"></span>
                </div>

            </div>
        </div>

        <!-- Media -->
        <div class="mb-6">
            <h3 class="text-xl font-bold text-white mb-4">Media</h3>
            <div class="grid grid-cols-1 gap-4">

                <!-- Image URL -->
                <div>
                    <label asp-for="ImageUrl" class="block text-sm font-medium text-gray-300 mb-2">Image URL</label>
                    <input asp-for="ImageUrl" type="url" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder="https://example.com/poster.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                </div>

                <!-- Trailer URL -->
                <div>
                    <label asp-for="TrailerUrl" class="block text-sm font-medium text-gray-300 mb-2">Trailer URL (YouTube)</label>
                    <input asp-for="TrailerUrl" type="url" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500" placeholder="https://youtube.com/watch?v=..." />
                    <span asp-validation-for="TrailerUrl" class="text-red-500 text-sm"></span>
                </div>

            </div>
        </div>

        <!-- Relationships -->
        <div class="mb-6">
            <h3 class="text-xl font-bold text-white mb-4">Cast & Crew</h3>
            <div class="grid grid-cols-1 gap-4">

                <!-- Director -->
                <div>
                    <label asp-for="DirectorId" class="block text-sm font-medium text-gray-300 mb-2">Director *</label>
                    <select asp-for="DirectorId" asp-items="Model.Directors" class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500">
                        <option value="">-- Select Director --</option>
                    </select>
                    <span asp-validation-for="DirectorId" class="text-red-500 text-sm"></span>
                </div>

                <!-- Genres -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Genres (Multiple)</label>
                    <select asp-for="SelectedGenreIds" asp-items="Model.Genres" multiple class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 h-32">
                    </select>
                    <p class="text-gray-400 text-xs mt-1">Hold Ctrl/Cmd to select multiple</p>
                </div>

                <!-- Actors -->
                <div>
                    <label class="block text-sm font-medium text-gray-300 mb-2">Actors (Multiple)</label>
                    <select asp-for="SelectedActorIds" asp-items="Model.Actors" multiple class="w-full bg-gray-700 text-white px-4 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-red-500 h-32">
                    </select>
                    <p class="text-gray-400 text-xs mt-1">Hold Ctrl/Cmd to select multiple</p>
                </div>

            </div>
        </div>

        <!-- Submit Buttons -->
        <div class="flex gap-4">
            <button type="submit" class="flex-1 bg-red-500 hover:bg-red-600 text-white px-6 py-3 rounded-lg font-semibold transition">
                <i class="fas fa-save mr-2"></i>@(isEdit ? "Update Movie" : "Create Movie")
            </button>
            <a asp-controller="AdminMovies" asp-action="Index" class="flex-1 bg-gray-700 hover:bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold text-center transition">
                <i class="fas fa-times mr-2"></i>Cancel
            </a>
        </div>

    </form>

</div>

    <partial name="_ValidationScriptsPartial" />

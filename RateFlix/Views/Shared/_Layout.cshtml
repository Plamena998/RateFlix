<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RateFlix</title>

    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome (икони) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-gray-900 text-white">
    <header>
        <nav class="bg-gray-800 shadow-lg">
            <div class="container mx-auto px-6 py-4">
                <div class="flex items-center justify-between">
                    <div class="text-2xl font-bold text-red-500">
                        <a asp-controller="Home" asp-action="Index">RateFlix</a>
                    </div>
                    <div class="hidden md:flex space-x-8">
                        <a asp-controller="Movies" asp-action="Index" class="hover:text-red-500 transition">Movies</a>
                        <a asp-controller="Series" asp-action="Index" class="hover:text-red-500 transition">Series</a>
                        <a asp-controller="Actors" asp-action="Index" class="hover:text-red-500 transition">Actors</a>
                    </div>
                    <div class="flex items-center space-x-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="text-gray-300">Hello, @User.Identity.Name</span>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="inline">
                                <button type="submit" class="hover:text-red-500 transition">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" class="hover:text-red-500">Login</a>
                            <a asp-area="Identity" asp-page="/Account/Register" class="bg-red-500 px-4 py-2 rounded hover:bg-red-600 transition">Sign Up</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="min-h-screen">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 mt-12 py-8">
        <div class="container mx-auto px-6 text-center text-gray-400">
            <p>&copy; 2024 RateFlix. All rights reserved.</p>
        </div>
    </footer>
    <div id="contentModalContainer"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/modals.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
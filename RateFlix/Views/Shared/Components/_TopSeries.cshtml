@model List<RateFlix.Core.Models.Series>

<section class="py-16 bg-gray-800">
    <div class="container mx-auto px-6">
        <div class="flex items-center justify-between mb-8">
            <h2 class="text-3xl font-bold">
                <i class="fas fa-tv text-red-500 mr-2"></i>
                Top Rated Series
            </h2>
            <a asp-controller="Series" asp-action="Index" class="text-red-500 hover:text-red-400 transition">
                View All <i class="fas fa-arrow-right ml-2"></i>
            </a>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
            @foreach (var series in Model)
            {
                @await Html.PartialAsync("_SeriesCard", series)
            }
        </div>
        <div id="contentModalContainer"></div>
        <div id="seasonsModalContainer"></div>
    </div>
</section>
@model RateFlix.Core.Models.Series

<div id="seasonsModal-@Model.Id"
     class="fixed inset-0 bg-black bg-opacity-90 z-50 hidden flex items-center justify-center p-4"
     onclick="closeSeasonsModal(@Model.Id)">

    <div class="bg-gray-900 rounded-xl max-w-4xl w-full max-h-[90vh] overflow-y-auto shadow-2xl p-6"
         onclick="event.stopPropagation()">

        <!-- Close -->
        <button onclick="closeSeasonsModal(@Model.Id)"
                class="absolute top-4 right-4 bg-black bg-opacity-60 hover:bg-opacity-80 text-white
                       rounded-full w-10 h-10 flex items-center justify-center text-xl z-10">
            <i class="fas fa-times"></i>
        </button>

        <h2 class="text-3xl font-bold text-white mb-6">@Model.Title - Seasons & Episodes</h2>

        @foreach (var season in Model.Seasons.OrderBy(s => s.SeasonNumber))
        {
            <div class="mb-4 border-b border-gray-700 pb-4">
                <div class="flex justify-between items-center cursor-pointer" onclick="toggleSeason(@season.Id)">
                    <h3 class="text-xl font-semibold text-white">
                        Season @season.SeasonNumber
                        <span class="text-yellow-400 ml-2">
                            <i class="fas fa-star mr-1"></i>@season.IMDBScore.ToString("0.0")
                        </span>
                    </h3>
                    <i id="chevron-@season.Id" class="fas fa-chevron-down text-gray-400 transition-transform duration-300"></i>
                </div>

                <div id="season-@season.Id" class="mt-2 hidden pl-4">
                    @foreach (var episode in season.Episodes.OrderBy(e => e.EpisodeNumber))
                    {
                        <div class="mb-2 flex justify-between items-center bg-gray-800 p-2 rounded-lg">
                            <span class="text-white">Episode @episode.EpisodeNumber: @episode.Title</span>
                            <span class="text-yellow-400">
                                <i class="fas fa-star mr-1"></i>@episode.IMDBScore.ToString("0.0")
                            </span>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

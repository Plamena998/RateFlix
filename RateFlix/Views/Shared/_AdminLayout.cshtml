<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RateFlix Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-gray-900 text-white">

    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-800 border-r border-gray-700 flex-shrink-0">
            <div class="p-6">
                <h1 class="text-2xl font-bold text-red-500 flex items-center gap-2">
                    <i class="fas fa-shield-alt"></i>
                    Admin Panel
                </h1>
            </div>

            <nav class="mt-6">
                <a href="/Admin" class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" ? "active" : "")">
                    <i class="fas fa-chart-line"></i>
                    <span>Dashboard</span>
                </a>

                <!-- Content Management -->
                <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase">Content</div>
                <a href="/Admin/Movies" class="nav-item">
                    <i class="fas fa-film"></i>
                    <span>Movies</span>
                </a>
                <a href="/Admin/Series" class="nav-item">
                    <i class="fas fa-tv"></i>
                    <span>Series</span>
                </a>
                <a href="/Admin/Actors" class="nav-item">
                    <i class="fas fa-user-tie"></i>
                    <span>Actors</span>
                </a>
                <a href="/Admin/Directors" class="nav-item">
                    <i class="fas fa-video"></i>
                    <span>Directors</span>
                </a>
                <a href="/Admin/Genres" class="nav-item">
                    <i class="fas fa-tags"></i>
                    <span>Genres</span>
                </a>

                <!-- User Management -->
                <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase mt-4">Users</div>
                <a href="/Admin/Users" class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>All Users</span>
                </a>
                <a href="/Admin/AdminUsers" class="nav-item">
                    <i class="fas fa-user-shield"></i>
                    <span>Admins</span>
                </a>

                <!-- Moderation -->
                <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase mt-4">Moderation</div>
                <a href="/Admin/Reviews" class="nav-item">
                    <i class="fas fa-comments"></i>
                    <span>Reviews</span>
                </a>

                <!-- Analytics -->
                <div class="px-4 py-2 text-xs font-semibold text-gray-500 uppercase mt-4">Reports</div>
                <a href="/Admin/Analytics" class="nav-item">
                    <i class="fas fa-chart-bar"></i>
                    <span>Analytics</span>
                </a>

                <!-- Back to Site -->
                <div class="px-4 py-2 mt-6">
                    <a href="/" class="block w-full bg-gray-700 hover:bg-gray-600 text-white text-center py-2 rounded-lg transition">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Site
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Top Bar -->
            <header class="bg-gray-800 border-b border-gray-700 p-4">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold">@ViewData["Title"]</h2>
                    <div class="flex items-center gap-4">
                        <span class="text-gray-400">Welcome, <strong class="text-white">@User.Identity.Name</strong></span>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/" method="post">
                            <button type="submit" class="text-red-400 hover:text-red-300 transition">
                                <i class="fas fa-sign-out-alt mr-2"></i>Logout
                            </button>
                        </form>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <main class="flex-1 overflow-y-auto p-6 bg-gray-900">
                @RenderBody()
            </main>
        </div>
    </div>

    <style>
        .nav-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 16px;
            margin: 4px 8px;
            color: #9CA3AF;
            border-radius: 8px;
            transition: all 0.2s;
        }

            .nav-item:hover {
                background-color: #374151;
                color: white;
            }

            .nav-item.active {
                background-color: #DC2626;
                color: white;
            }

            .nav-item i {
                width: 20px;
                text-align: center;
            }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>